<UserControl x:Class="LabeledTextBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScottPage.WPF.Common"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300" MinWidth="200">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=LabelText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:LabeledTextBoxUserControl}}}" MinWidth="100" VerticalAlignment="Center" />
            <TextBox Text="{Binding Path=TextBoxText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:LabeledTextBoxUserControl}}}" MinWidth="100" />
        </StackPanel>
    </Grid>
</UserControl>
